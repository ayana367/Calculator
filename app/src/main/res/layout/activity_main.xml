<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/conteiner"
        app:layout_constraintBottom_toTopOf="@id/margin_linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginHorizontal="36dp"
            android:ellipsize="end"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="60sp"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/margin_linearLayout"
        android:layout_width="313dp"
        android:layout_height="431dp"
        android:layout_marginTop="290dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_white_blackground"
                android:layout_marginStart="34dp"
                android:onClick="onLogicClick"
                android:paddingStart="0dp"
                android:text="Ac"
                android:textAllCaps="false"
                android:textColor="@color/btn_text_w_blackround"
                android:textSize="35sp"/>

            <Button
                android:id="@+id/btnCter"
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:background="@drawable/btn_white_blackground"
                android:drawableStart="@drawable/ic_baseline_backspace_24"
                android:onClick="onLogicClick"
                android:paddingStart="20dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnD"
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_white_blackground"
                android:layout_marginStart="32dp"
                android:text="/ "
                android:textColor="@color/btn_text_white_blackground"
                android:textSize="45dp"
                android:onClick="Operation"
                android:paddingStart="21dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                style="@style/first_btn_style"
                android:layout_marginStart="34dp"
                android:onClick="onLogicClick"
                android:text="7"
                android:textColor="@color/btn_text_white_blackground"/>

            <Button
                android:id="@+id/btn8"
                style="@style/first_btn_style"
                android:layout_marginStart="32dp"
                android:onClick="onLogicClick"
                android:text="8"
                android:textColor="@color/btn_text_white_blackground"/>

            <Button
                android:id="@+id/btn9"
                style="@style/first_btn_style"
                android:layout_marginStart="32dp"
                android:onClick="onLogicClick"
                android:text="9"
                android:textColor="@color/btn_text_white_blackground"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                style="@style/first_btn_style"
                android:layout_marginStart="34dp"
                android:onClick="onLogicClick"
                android:text="4"
                android:textColor="@color/btn_text_white_blackground"/>

            <Button
                android:id="@+id/btn5"
                style="@style/first_btn_style"
                android:layout_marginStart="32dp"
                android:onClick="onLogicClick"
                android:text="5"
                android:textColor="@color/btn_text_white_blackground"/>

            <Button
                android:id="@+id/btn6"
                style="@style/first_btn_style"
                android:layout_marginStart="32dp"
                android:onClick="onLogicClick"
                android:text="6"
                android:textColor="@color/btn_text_white_blackground"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                style="@style/first_btn_style"
                android:layout_marginStart="34dp"
                android:onClick="onLogicClick"
                android:text="1"
                android:textColor="@color/btn_text_white_blackground"/>

            <Button
                android:id="@+id/btn2"
                style="@style/first_btn_style"
                android:layout_marginStart="32dp"
                android:onClick="onLogicClick"
                android:text="2"
                android:textColor="@color/btn_text_white_blackground"/>

            <Button
                android:id="@+id/btn3"
                style="@style/first_btn_style"
                android:layout_marginStart="32dp"
                android:onClick="onLogicClick"
                android:text="3"
                android:textColor="@color/btn_text_white_blackground"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn0"
                android:layout_width="156dp"
                android:layout_height="match_parent"
                android:layout_marginStart="34dp"
                android:background="@drawable/btn_white_blackground"
                android:onClick="onLogicClick"
                android:text="0"
                android:textColor="@color/btn_text_white_blackground"
                android:textSize="22dp"/>

            <Button
                android:id="@+id/btnTochka"
                style="@style/first_btn_style"
                android:layout_marginStart="42dp"
                android:drawableStart="@drawable/tochka"
                android:onClick="Operation"
                android:paddingStart="29dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="87dp"
        android:layout_height="431dp"
        android:layout_marginTop="290dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/margin_linearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="87dp"
            android:layout_height="435dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnX"
                android:onClick="Operation"
                style="@style/first_bly_btn_style"
                android:drawableStart="@drawable/star"
                android:paddingStart="20dp"/>

            <Button
                android:id="@+id/btnMinys"
                style="@style/first_bly_btn_style"
                android:layout_marginTop="22dp"
                android:drawableStart="@drawable/minys"
                android:paddingStart="25dp"
                android:onClick="Operation"/>

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="62dp"
                android:layout_height="96dp"
                android:layout_marginTop="30dp"
                android:onClick="Operation"
                android:background="@drawable/btn_heavenly_blackground"
                android:drawableStart="@drawable/plis"
                android:paddingStart="12dp"/>

            <Button
                android:id="@+id/btnRavno"
                android:layout_width="62dp"
                android:layout_height="96dp"
                android:layout_marginTop="30dp"
                android:onClick="Operation"
                android:background="@drawable/btn_blue_blackground"
                android:drawableStart="@drawable/ravno"
                android:paddingStart="11dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>